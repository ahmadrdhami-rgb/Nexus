import React from 'react';

export const Table = ({ children }: { children: React.ReactNode }) => <table className="w-full border-collapse">{children}</table>;

export const TableHeader = ({ children }: { children: React.ReactNode }) => <thead>{children}</thead>;

export const TableBody = ({ children }: { children: React.ReactNode }) => <tbody>{children}</tbody>;

export const TableRow = ({ children }: { children: React.ReactNode }) => <tr className="border">{children}</tr>;

export const TableCell = ({ children }: { children: React.ReactNode }) => <td className="p-2 border">{children}</td>;